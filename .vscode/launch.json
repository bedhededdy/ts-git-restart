{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CLI",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node",
            "runtimeArgs": [
                "${workspaceFolder}/cli/src/main.ts"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "args": ["${input:cliArgs}"],
            "cwd": "${workspaceFolder}/cli",
            "outFiles": [
                "${workspaceFolder}/cli/dist/**/*.js",
                "${workspaceFolder}/core/dist/**/*.js"
            ],
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/cli/src/**/*.ts",
                "${workspaceFolder}/core/src/**/*.ts",
                "!**/node_modules/**"
            ],
        }
    ],
    "inputs": [
    {
      "id": "cliArgs",
      "type": "promptString",
      "description": "Enter CLI arguments",
      "default": ""
    }
  ],
}
